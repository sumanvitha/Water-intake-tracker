<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.thanmai.waterintaketracker.MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weight"
        android:textSize="27dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="56dp"
        android:layout_marginTop="79dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/editText"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="56dp"
        app:layout_constraintVertical_bias="0.774"
        app:layout_constraintBottom_toTopOf="@+id/editText" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:text=""
        app:layout_constraintRight_toLeftOf="@+id/textView2"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="17dp"
        tools:layout_constraintBaseline_creator="1"
        android:layout_marginRight="17dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kg"
        android:textSize="18dp"
        android:textColor="#0000FF"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="68dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="168dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="68dp" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="35dp"
        android:layout_height="37dp"
        android:layout_marginBottom="56dp"
        android:text="to"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintHorizontal_bias="0.443" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="208dp"
        android:layout_height="54dp"
        android:text="Wakeup- Sleep "
        android:textSize="20dp"
        android:layout_marginStart="8dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        android:layout_marginTop="77dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="74dp"
        app:layout_constraintLeft_toLeftOf="@+id/wakeup"
        android:layout_marginLeft="8dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_light"
        android:text="OK"
        android:textSize="20dp"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="16dp"
        app:layout_constraintLeft_toRightOf="@+id/wakeup" />

    <TextView
        android:id="@+id/wakeup"
        android:layout_width="78dp"
        android:layout_height="34dp"
        android:text="9:00"
        android:textSize="25dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="59dp"
        app:layout_constraintBottom_toBottomOf="@+id/sleep"
        android:layout_marginEnd="61dp"
        app:layout_constraintRight_toRightOf="@+id/textView3"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/sleep"
        android:layout_marginLeft="59dp"
        android:layout_marginRight="61dp"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/sleep"
        android:layout_width="88dp"
        android:layout_height="33dp"
        android:text="21:00"
        android:textSize="25dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/button"
        android:layout_marginStart="20dp"
        android:layout_marginTop="41dp"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="38dp"
        app:layout_constraintLeft_toRightOf="@+id/textView3"
        android:layout_marginLeft="20dp" />

</android.support.constraint.ConstraintLayout>
